#include <stdio.h>
#include <stdlib.h>

int main (void)
{
        double A;
        double B;
        double res;
        int ope;
        
        printf("Digite um numero: ");
        scanf ("%lf", &A);
        printf("Digite outro numero: ");
        scanf ("%lf", &B);
        
        printf ("Que operacao deseja realizar?"); 
        printf ("1 - Adicao\n, 2 - Subtracao\n, 3 - Multiplicacao\n, 4 - Divisao");        
        scanf ("&d", &ope);
        
        switch (ope)
        {

        case 1:
        res = A+B;
        printf("A soma do primeiro numero com o segundo numero eh: ");
        break;

        case 2:
        res = A-B;
        printf("A subtracao do primeiro numero com o segundo numero eh: ");
        break;

        case 3:
        res = A*B;
        printf("A multiplicacao do primeiro numero com o segundo numero eh: ");
        break;

        case 4:
        res = A/B;
        printf("A divisao do primeiro numero com o segundo numero eh: ");
        break;
        
        }
              
        return 0;
}
        
